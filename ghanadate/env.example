# Server Configuration
PORT=5000
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/ghana-date-app

# JWT Secret
JWT_SECRET=your-super-secret-jwt-key-here

# Cloudinary (for image uploads)
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Twilio (for SMS verification)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=your-twilio-phone-number

# Stripe (for payments)
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key

# App Configuration
APP_NAME=GhanaDate
APP_URL=http://localhost:3000
API_URL=http://localhost:5000

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Ghana-specific settings
DEFAULT_LOCATION_LAT=5.6037
DEFAULT_LOCATION_LNG=-0.1870
DEFAULT_CITY=Accra
SUPPORTED_CITIES=Accra,Kumasi,Tamale,Cape Coast,Takoradi,Sunyani,Koforidua,Techiman,Ho,Bolgatanga
